#-*- mode: makefile; tab-width: 4; -*-
#
######### libfwbuilder/qmake.inc.in
#
QTDIR         = $$(QTDIR)

TEMPLATE      = lib

SO_VERSION    = @LIBFWBUILDER_SOLIB_VERSION@

DEFINES      += $$(DEFINES)
INCLUDEPATH  += .. ../.. $$(INCLUDEPATH)
LANGUAGE      = C++

unix {
!macx {
	UI_DIR = .ui
	MOC_DIR = .moc
	OBJECTS_DIR = .obj

    prefix = @prefix@
	exec_prefix = @EXEC_PREFIX@
	DESTDIR =

	target.path = @LIBDIR@
	dtd.path = @TEMPLATE_DIR@/
	migration.path = @TEMPLATE_DIR@/migration
	doc.path = @DOCDIR@

	CONFIG                 += warn_on debug
	QMAKE_CFLAGS_DEBUG     += -Wno-unused-parameter
	QMAKE_CFLAGS_RELEASE   += -Wno-unused-parameter
	QMAKE_CXXFLAGS_DEBUG   += -Wno-unused-parameter @CXXFLAGS@
	QMAKE_CXXFLAGS_RELEASE += -Wno-unused-parameter @CXXFLAGS@
}
}

unix {
	INCLUDEPATH += /usr/include @XML_CFLAGS_Q@ @XSLT_CFLAGS_Q@ \
				   @PTHREAD_CFLAGS_Q@ 
	LIBS += @PTHREAD_LIBS@ @XML_LIBS@ @XSLT_LIBS@ @LIBSNMP_LIBS@ \
				   @LIB_RESOLV@ @LIBS@
}

macx {
    prefix = @prefix@
}

exists(qmake2.inc) {
  include( qmake2.inc)
}

CONFIG -= qt

INSTALLS += target
