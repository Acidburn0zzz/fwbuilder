#!/bin/sh

system=`uname -s`

case $system in
    Linux)
        export LD_LIBRARY_PATH=../fwbuilder:../fwcompiler

        find -type f -name '*_test' | while read tf; do
	  echo
	  echo "================ $tf"
	  ldd $tf
	  $tf
	done
        ;;

    Darwin)
	export DYLD_LIBRARY_PATH=../fwbuilder/:../fwcompiler

        find -type f -name '*_test' | sh
        ;;
esac


